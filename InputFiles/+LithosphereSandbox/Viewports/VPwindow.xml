<?xml version="1.0"?>
<!DOCTYPE StGermainData SYSTEM "stgermain.dtd">

<StGermainData xmlns="http://www.vpac.org/StGermain/XML_IO_Handler/Jun2003">
	
	<list name="plugins" mergeType="merge">
		<param>lucPlugin</param>
	</list>
		
	
	<struct name="components" mergeType="merge">
		<struct name="RenderingEngine">
			<param name="Type">lucRenderingEngineGL</param>
		</struct>
	
		<struct name="PNGOutput">
			<param name="Type">lucOutputPNG</param>
		</struct>

		<!-- this is the colour scheme for the VPs -->
		<struct name="LowerMantleColourMap">
			<param name="Type">lucColourMap</param>
			<param name="colours"> #440000 #FF6600 #FFFF00 </param>
			<param name="dynamicRange">True</param>
			<param name="minimum">0</param>
			<param name="maximum">2.5</param>
		</struct>

		<struct name="UpperMantleColourMap">
			<param name="Type">lucColourMap</param>
			<param name="colours"> #990000 #FF6600 #FFFF00 </param>
			<param name="dynamicRange">True</param>
			<param name="minimum">0</param>
			<param name="maximum">2.5</param>
		</struct>
		
		<struct name="LowerCrustColourMap">
			<param name="Type">lucColourMap</param>
			<param name="colours"> #800080 #0099FF #99FFFF </param>
			<param name="dynamicRange">True</param>
			<param name="minimum">0</param>
			<param name="maximum">1</param>
		</struct>
		
		<struct name="UpperCrustColourMap">
			<param name="Type">lucColourMap</param>
			<param name="colours"> #803000 #0099FF #99FFFF </param>
			<param name="dynamicRange">True</param>
			<param name="minimum">0</param>
			<param name="maximum">1</param>
		</struct>

		<struct name="UpperCrust2ColourMap">
			<param name="Type">lucColourMap</param>
			<param name="colours"> #0000FF #00FF50 #99FFFF </param>
			<param name="dynamicRange">True</param>
			<param name="minimum">0</param>
			<param name="maximum">1</param>
		</struct>
			
		<struct name="UpperCrustColourBar">
			<param name="Type">lucColourBar</param>
			<param name="ColourMap">UpperCrustColourMap</param>
		</struct>
	
		<struct name="LowerCrustColourBar">
			<param name="Type">lucColourBar</param>
			<param name="ColourMap">LowerCrustColourMap</param>
		</struct>
		
		<struct name="UpperMantleColourBar">
			<param name="Type">lucColourBar</param>
			<param name="ColourMap">UpperMantleColourMap</param>
		</struct>
	
		<struct name="LowerMantleColourBar">
			<param name="Type">lucColourBar</param>
			<param name="ColourMap">LowerMantleColourMap</param>
		</struct>
	
		<struct name="Boxborder">
			<param name="Type">lucFieldVariableBorder</param>
			<param name="FieldVariable">VelocityField</param>
		</struct>
	</struct>

</StGermainData>

